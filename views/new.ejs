<%- include ('partials/header') %>
<div class="container"><br/>
<h1> Add new product </h1>

<form action="/admin/add" method="POST">
<div class="form-group row mb-3">
	<input type="text" name="product_name" class="form-control" placeholder="Product name"/>
</div>
 <div class="form-group row mb-3">
	<input type="text" name="product_volume" class="form-control" placeholder="Product volume"/>
</div>
<div class="form-group row mb-3">
	<input type="text" name="product_type" class="form-control" placeholder="Product type"/>
</div>
<div class="form-group row mb-3">
	<input type="number" name="product_price" class="form-control" placeholder="Product price"/>
</div>
<div class="form-group row mb-3">
	<input type="file" name="image" class="form-control" accept=".jpeg,.png,.jpg"/>
</div>
 <div class="form-group row mb-3">
	<textarea name="product_desc" class="form-control" placeholder="Description"></textarea>
</div>
<div class="form-group row mb-3">
	<input type="text" name="product_tag" class="form-control" placeholder="Enter product tag with comma seperation"/>
</div>
<div class="form-group row mb-3">
	<input type="number" name="product_stock" class="form-control" placeholder="Product stock"/>
</div>
<div class="form-group row mb-3">
	<button type="submit" class="btn btn-info" >Save</button>
</div>
</form>
<a href="/">Cancel</a>
</div><br/>

<%- include ('partials/footer') %>