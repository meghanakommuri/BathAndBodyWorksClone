<%- include ('partials/header') %>
<div class="container">
  <h1> Edit the product </h1>

  <form action="/admin/editproduct" method="POST">
    <div class="form-group row mb-3">
        <input type="text" name="id" class="form-control" value="<%= Product._id %>" hidden>
    </div>
    <div class="form-group row mb-3">
        <input type="text" name="product_name" class="form-control" value="<%= Product.name %>">
    </div>
     <div class="form-group row mb-3">
        <input type="text" name="product_volume" class="form-control" value="<%= Product.volume %>">
    </div>
    <div class="form-group row mb-3">
        <input type="text" name="product_type" class="form-control" value="<%= Product.type %>">
    </div>
    <div class="form-group row mb-3">
        <input type="text" name="product_price" class="form-control" value="<%= Product.price %>">
    </div>
    <div class="form-group row mb-3">
        <input type="file" name="product_image" class="form-control" accept=".jpeg,.png,.jpg"/>
    </div>
     <div class="form-group row mb-3">
        <textarea name="product_desc" class="form-control"><%= Product.desc %></textarea>
    </div>
    <div class="form-group row mb-3">
        <input type="text" name="product_tag" class="form-control" value="<%= Product.tag %>">
    </div>
    <div class="form-group row mb-3">
        <input type="number" name="product_stock" class="form-control" value="<%= Product.stock %>"/>
    </div>
    <div class="form-group row mb-3">
    	<button type="submit" class="btn btn-info" >Save</button>
    </div>
  </form>
  <a href="/products">Cancel</a>
</div>

<%- include ('partials/footer') %>
