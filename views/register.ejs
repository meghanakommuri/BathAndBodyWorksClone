<%- include ('partials/header') %>
<script type="javascript" src="../public/javascripts/validatesignup.js"></script>
<div class="container"><br/>
    <h3> Welcome to BB Eternity... Sign In to enjoy different fragrances. </h3>
    <form role="form" action="/register" method="post">
      <div class="form-group mb-3">
        <label for="name">Email:</label>
        <input type="text" name="username" id="email" class="form-control" placeholder="Email">
      </div>
      <div class="form-group mb-3">
        <label for="name">Name:</label>
        <input type="text" name="name" class="form-control" placeholder="Name">
      </div>
      <div class="form-group mb-3">
        <label for="name">Password:</label>
        <input type="password" name="password" id="pwd" class="form-control" placeholder="Password">
        <small id="emailHelp" class="form-text text-muted">Password should contain at least 6 characters, one uppercase letter, one number and one special character (!,@,#,$,%,^,&,*,+)</small>
      </div>
      <div class="form-group mb-3">
        <label for="name">Phone Number:</label>
        <input type="tel" pattern="[0-9]{10}" name="phone" class="form-control" placeholder="Phone Number">
      </div>
      <div class="form-group mb-3">
        <input type="checkbox" name="t&c" class="form-check-input" checked id="agree">
        <label> I agree to the <a href="/tu">Terms and Conditions.</a></label>
        </div>
        <div class="form-group mb-3">
          <button type="submit" class="btn btn-warning ">Sign Up</button>
          <a href="/">Cancel</a>
      </div>
    </form>
  </div><br/>

<%- include ('partials/footer') %>